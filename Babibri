<body>

  <!-- Background Music -->
  <audio id="bgMusic" loop>
    <source src="https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3" type="audio/mpeg">
  </audio>

  <div class="card">
    <img src="https://media1.tenor.com/m/8AuWgDmgPBIAAAAC/baongoc-dtbncuti.gif" alt="Cute GIF">
    <h2>Will you be my Valentine? ðŸ’•</h2>

    <div class="buttons">
      <button id="yes" onclick="yesClick()">Yes ðŸ’–</button>
      <button id="no" onmouseover="moveNo()">No ðŸ˜…</button>
    </div>
  </div>

  <script>
    // Floating hearts continuously
    setInterval(createHeart, 400);

    function createHeart() {
      const heart = document.createElement("div");
      heart.classList.add("heart");
      heart.innerHTML = "ðŸ’–";
      heart.style.left = Math.random() * window.innerWidth + "px";
      heart.style.fontSize = Math.random() * 20 + 15 + "px";
      document.body.appendChild(heart);

      setTimeout(() => heart.remove(), 5000);
    }

    function yesClick() {
      document.getElementById("bgMusic").play();

      for (let i = 0; i < 90; i++) {
        createConfetti();
      }

      setTimeout(() => {
        document.body.innerHTML = `
          <div style="
            display:flex;
            justify-content:center;
            align-items:center;
            height:100vh;
            font-family:Arial;
            background:#ffb6c1;
            text-align:center;
          ">
            <h1>I LOVVVVEEE YOUUU SOOO MUCCHHH BABIII ðŸ˜—</h1>
          </div>
        `;
      }, 800);
    }

    function moveNo() {
      const noBtn = document.getElementById("no");
      const x = Math.random() * 180;
      const y = Math.random() * 40;
      noBtn.style.left = x + "px";
      noBtn.style.top = y + "px";
    }

    function createConfetti() {
      const confetti = document.createElement("div");
      confetti.classList.add("confetti");
      document.body.appendChild(confetti);

      confetti.style.left = Math.random() * window.innerWidth + "px";
      confetti.style.backgroundColor =
        ["#ff4d6d", "#ffb6c1", "#ffe066", "#cdb4db"][Math.floor(Math.random() * 4)];

      setTimeout(() => confetti.remove(), 3000);
    }
  </script>

</body>
